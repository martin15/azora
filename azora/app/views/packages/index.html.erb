<div class="small-banner">
  <%= image_tag "banner-our-service.jpg", class: "img img-responsive" %>
</div>

<%= render :partial => "services/shared_menu" %>

<div class="container">
  <div class="col-xs-12 col-sm-3">
    <% @types.each_with_index do |type, x| %>
      <% active = 'active' if type == params[:type].downcase %>
      <div class="col-xs-12 package-side-menu <%= active %>">
        <%= link_to type.titleize, packages_path(type) %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-9 package-list">
    <% @packages_arr.each do |packages| %>
      <div class="row">
        <% packages.each do |package| %>
          <div class=" col-sm-6 package-box">
            <div class=" col-xs-12 package">
              <%= link_to package_detail_path(package.permalink), :remote => true do %>
                <%= image_tag package.banner.url(:small), :class => "img img-responsive" %>
              <% end %>
              <span class="col-xs-12 title">
                <%= link_to package.title, package_detail_path(package.permalink), :remote => true %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div id="package-detail"></div>
