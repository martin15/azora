<div class="page-header"  style="background-color:#3e3e3e">
  <div class="container">
    <div class="col-xs-12 col-sm-4 name no-padding-lr">Login</div>
    <div class="col-xs-12 col-sm-8 breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to "Home", root_path %></li>
        <li class="active">Login</li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <div class="col-xs-12 col-sm-8 col-md-6 login">
    <h1>Login</h1>

    <%= form_tag login_create_path do %>

      <div class="form-group">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, nil,autofocus: true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, autocomplete: "off", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Log in", :class => "btn btn-green" %>
      </div>

    <% end %>
  </div>
</div>
