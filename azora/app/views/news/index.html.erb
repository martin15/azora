<div class="page-header small-banner suitcase">
  <div class="breadcrum-masking">
    <div class="container">
      <div class="col-xs-12 col-sm-4 name no-padding-lr">News</div>
      <div class="col-xs-12 col-sm-8 breadcrumb">
        <ol class="breadcrumb">
          <li><%= link_to "Home", root_path %></li>
          <li class="active">News</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container" style="padding-top: 0;">
  <%= render :partial => "shared/flash" %>
  <div class="col-xs-12 news-list padding-lr-150">
    <% @all_news.each do |news| %>
      <div class="col-xs-12 news">
        <div class="col-xs-12 news-short-detail padding-lr-25">
          <%= image_tag news.banner.url(:large), :class => "img img-responsive" %>
          <span class="col-xs-12 title"><%= link_to news.title, news_detail_path(news.permalink) %></span>
          <span class="col-xs-12 news-info">
            <span class="col-xs-3 news-info-date">
              <i class="fa fa-calendar"></i><%= news.updated_at.strftime('%d-%b-%Y') %>
            </span>
            <% unless news.user.nil? %>
              <span class="col-xs-3 news-info-author">
                <i class="fa fa-user"></i>By <%= news.user %>
              </span>
            <% end %>
          </span>
          <span class="col-xs-12 short-content">
            <%= simple_format(news.short_content +
                              " #{link_to '[...]', news_detail_path(news.permalink)}") %>
          </span>
          <span class="col-xs-12 more">
            <%= link_to "Read More...", news_detail_path(news.permalink), :class => "btn read-more" %>
          </span>
        </div>
      </div>
    <% end %>
    <div class="col-xs-12 no_padding_lr pagination"><%= paginate @all_news %></div>
  </div>

</div>


