<div class="container" style="padding-top: 0;">
  <%= render :partial => "shared/flash" %>
  <div class="col-xs-12 news-list padding-lr-150">
    <div class="col-xs-12 news">
      <div class="col-xs-12 news-detail padding-lr-25">
        <span class="col-xs-12 title"><%= @news.title %></span>
        <span class="col-xs-12 news-info">
          <span class="col-xs-3 news-info-date">
            <i class="fa fa-calendar"></i><%= @news.updated_at.strftime('%d-%b-%Y') %>
          </span>
          <% unless @news.user.blank? %>
            <span class="col-xs-3 news-info-author">
              <i class="fa fa-user"></i>By <%= @news.user %>
            </span>
          <% end %>
        </span>
        <%= image_tag @news.banner.url(:large), :class => "img img-responsive", style: "margin: 0 auto 30px;" %>
        <span class="col-xs-12 short-content">
          <%= raw(@news.content) %>
        </span>
      </div>
    </div>
  </div>

</div>


