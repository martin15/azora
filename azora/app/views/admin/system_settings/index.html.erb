<div class="page-header" style="background-color:#3e3e3e">
  <div class="container">
    <%#*<div class="breadcrum-masking">%>
      <div class="col-xs-12 col-sm-4 name no-padding-lr">Settings</div>
      <div class="col-xs-12 col-sm-8 breadcrumb">
        <ol class="breadcrumb">
          <li><%= link_to "Admin", admin_path %></li>
          <li class="active">Settings</li>
        </ol>
      </div>
    <%#*</div>%>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <p class="nav-link">
    <%= link_to "Manage Banner", admin_banners_path %>
  </p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th class="green-link"><%= sortable("name", "Name") %></th>
        <th>Value</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @system_settings.each_with_index do |system_setting, x| %>
        <tr>
          <th><%= @no+x+1 %></th>
          <td><%= system_setting.name %></td>
          <td>
            <%= link_to "Edit", edit_admin_system_setting_path(system_setting.permalink),
                        :class => "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="col-xs-12 no_padding_lr pagination"><%= paginate @system_settings %></div>
</div>
