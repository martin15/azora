<div class="page-header" style="background-color:#3e3e3e">
  <div class="container">
    <%#*<div class="breadcrum-masking">%>
      <div class="col-xs-12 col-sm-4 name no-padding-lr">Edit <%= @country.name.titleize %> Gallery</div>
      <div class="col-xs-12 col-sm-8 breadcrumb">
        <ol class="breadcrumb">
          <li><%= link_to "Admin", admin_path %></li>
          <li><%= link_to "#{@country.name.titleize} Galleries",
                           admin_country_galleries_path(@country.permalink) %></li>
          <li class="active">Edit <%= @country.name.titleize %> Gallery</li>
        </ol>
      </div>
    <%#*</div>%>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <%= form_for(@gallery, :url => admin_country_gallery_path(:id => @country.permalink,
                                                            :gallery_id => @gallery.id),
               :html => {:multipart => true, :class => "form-horizontal"}, :method => :put) do |f| %>
    <%= render :partial => 'form', :locals => { :f => f} %>
    <div class="form-group">
      <div class="col-sm-2">&nbsp;</div>
      <div class="col-sm-10">
        <%= f.submit :class => "btn btn-success" %>
        <%= link_to 'Back', admin_country_galleries_path(@country.permalink), :class => "btn btn-info" %>
      </div>
    </div>
  <% end %>
</div>
