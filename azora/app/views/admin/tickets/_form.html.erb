<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<% if @ticket.errors.any? %>
  <div class="alert alert-danger alert-dismissable" group="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <h4><%= pluralize(@ticket.errors.count, "error") %> prohibited this group from being saved:</h4>
    <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if action_name == 'edit' || action_name == 'update' %>
  <div class="form-group">
    <%= f.label :image, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag @ticket.logo.url(:thumb) %>
    </div>
  </div>
<% end %>

<div class="form-group m-b-0">
  <%= f.label :logo, "Image *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :logo, :class => "form-control",:accept => "video/*, image/*" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <span class="small-font">Please upload image with size 200 x 200 (width x height) or video with maximum size 100 mb</span>
  </div>
</div>
<div class="form-group">
  <%= f.label :name, "Name", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :website, "Website", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :website, :class => "form-control" %>
  </div>
</div>
