<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<% if @continent.errors.any? %>
  <div class="alert alert-danger alert-dismissable" group="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <h4><%= pluralize(@continent.errors.count, "error") %> prohibited this group from being saved:</h4>
    <ul>
    <% @continent.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :name, "Name *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, :class => "form-control" %>
    <%= hidden_field_tag "id", params[:id] %>
  </div>
</div>
<div class="form-group">
  <%= f.label :sequence, "Sequence *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :sequence, :class => "form-control" %>
    <%= hidden_field_tag "id", params[:id] %>
  </div>
</div>
<div class="form-group m-b-0">
  <%= f.label :banner, "Banner", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :banner, :class => "form-control" %>
    <%= hidden_field_tag "id", params[:id] %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <span class="small-font">Please upload image with size 400 x 400 (width x height)</span>
  </div>
</div>
