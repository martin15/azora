<div class="page-header" style="background-color:#3e3e3e">
  <div class="container">
    <%#*<div class="breadcrum-masking">%>
      <div class="col-xs-12 col-sm-4 name no-padding-lr">Services</div>
      <div class="col-xs-12 col-sm-8 breadcrumb">
        <ol class="breadcrumb">
          <li><%= link_to "Admin", admin_path %></li>
          <li class="active">Services</li>
        </ol>
      </div>
    <%#*</div>%>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <p class="nav-link">
    <%= link_to "Manage Hotels", admin_hotels_path %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to "Manage Tickets", admin_tickets_path %>
  </p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th class="green-link"><%= sortable("name", "Name") %></th>
        <th>Value</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each_with_index do |service, x| %>
        <tr>
          <th><%= @no+x+1 %></th>
          <td><%= service.name %></td>
          <td>
            <%= link_to "Edit", edit_admin_service_path(service.permalink),
                       :class => "btn btn-success" unless service.permalink.downcase == "other-service" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="col-xs-12 no_padding_lr pagination"><%= paginate @services %></div>
</div>
