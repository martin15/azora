<% content_for :javascript_includes do %>
  <%= javascript_include_tag "/assets/ckeditor/ckeditor" %>
<% end %>

<% if @package.errors.any? %>
  <div class="alert alert-danger alert-dismissable" group="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <h4><%= pluralize(@package.errors.count, "error") %> prohibited this group from being saved:</h4>
    <ul>
    <% @package.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if action_name == 'edit' || action_name == 'update' %>
  <div class="form-group">
    <%= f.label :banner, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag @package.banner.url(:small) %>
    </div>
  </div>
<% end %>

<div class="form-group m-b-0">
  <%= f.label :banner, "Banner", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :banner, :class => "form-control",:accept => "video/*, image/*" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <span class="small-font">Please upload image with size 768 x 1024 (width x height) or video with maximum size 100 mb</span>
  </div>
</div>
<div class="form-group">
  <%= f.label :title, "Title *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :package_type, "Type *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <label class="radio-inline">
      <%= f.radio_button :package_type, "domestic" %>Domestic
    </label>
    <label class="radio-inline">
      <%= f.radio_button :package_type, "international" %>International
    </label>
  </div>
</div>
<div class="form-group">
  <%= f.label :city, "City *", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :city, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :description, "Description", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :description, :class => "form-control",
                      :ckeditor => {:uiColor => "#f0e5d2", :toolbar => "Basic"}%>
  </div>
</div>
