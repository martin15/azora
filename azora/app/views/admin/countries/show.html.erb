<div class="page-header" style="background-color:#3e3e3e">
  <div class="container">
    <%#*<div class="breadcrum-masking">%>
      <div class="col-xs-12 col-sm-4 name no-padding-lr">Country Detail</div>
      <div class="col-xs-12 col-sm-8 breadcrumb">
        <ol class="breadcrumb">
          <li><%= link_to "Admin", admin_path %></li>
          <li><%= link_to "Countries", admin_countries_path %></li>
          <li class="active"><%= @country.name %></li>
        </ol>
      </div>
    <%#*</div>%>
  </div>
</div>

<div class="container">
  <div class="form-horizontal ">
    <div class="form-group">
      <div class="col-sm-2 control-label bold">Banner</div>
      <div class="col-sm-10 control-value">
        <%= image_tag @country.banner.url(:thumb) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label bold">Continent</div>
      <div class="col-sm-10 control-value"><%= @country.try(:continent).try(:name) %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label bold">Name</div>
      <div class="col-sm-10 control-value"><%= @country.name %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label bold">Visa Requirement</div>
      <div class="col-sm-10 control-value">
        <div class="visa-requirement">
          <%= raw(@country.visa_requirement) %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">&nbsp;</div>
      <div class="col-sm-10 control-value">
        <%= link_to 'Back', admin_countries_path, :class => "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
